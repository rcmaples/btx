# BTX Storefront Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# CLERK AUTHENTICATION
# =============================================================================
# Get these from https://dashboard.clerk.com
# Required for authentication

NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Clerk webhook secret for syncing users to Sanity (production)
# Get from Clerk Dashboard > Webhooks > your webhook > Signing Secret
CLERK_WEBHOOK_SECRET=whsec_...

# Clerk webhook secret for local development (optional)
# Create a separate webhook in Clerk Dashboard pointing to your ngrok/localtunnel URL
CLERK_LOCAL_WEBHOOK_SECRET=whsec_...

# Clerk routing configuration
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/signup
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/profile
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/complete-profile

# =============================================================================
# PRISMA DATABASE
# =============================================================================
# Prisma Postgres connection string (with Accelerate for serverless)
# Get from https://console.prisma.io

DATABASE_URL=prisma://accelerate.prisma-data.net/?api_key=...

# =============================================================================
# SANITY CMS
# =============================================================================
# Get these from https://sanity.io/manage

NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-02-28

# Sanity API tokens
# Read token: Settings > API > Tokens > Add Token (Viewer)
SANITY_API_READ_TOKEN=sk...

# Write token: Settings > API > Tokens > Add Token (Editor or Deploy Studio)
# Required for syncing profile data to Sanity customer documents
SANITY_API_WRITE_TOKEN=sk...

# =============================================================================
# STRIPE (OPTIONAL - for checkout)
# =============================================================================
# Get these from https://dashboard.stripe.com/apikeys

NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# =============================================================================
# FULLSTORY (OPTIONAL - for analytics)
# =============================================================================

NEXT_PUBLIC_FULLSTORY_ORG_ID=your_org_id
