{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "tsconfig.json",
    "packages/typescript-config/**",
    "packages/eslint-config/**",
    "apps/storefront/.env",
    "apps/studio/.env"
  ],
  "globalEnv": [
    "NODE_ENV",
    "SANITY_API_READ_TOKEN",
    "SANITY_API_WRITE_TOKEN",
    "CLERK_SECRET_KEY",
    "CLERK_WEBHOOK_SECRET",
    "CLERK_LOCAL_WEBHOOK_SECRET",
    "DATABASE_URL",
    "DIRECT_URL",
    "STRIPE_SECRET_KEY",
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
    "VERCEL_ENV",
    "NEXT_PUBLIC_SANITY_PROJECT_ID",
    "NEXT_PUBLIC_SANITY_DATASET",
    "SANITY_STUDIO_PROJECT_ID",
    "SANITY_STUDIO_DATASET",
    "SANITY_STUDIO_HOST"
  ],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "out/**"]
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": []
    },
    "typegen": {
      "interactive": true,
      "cache": false,
      "persistent": true,
      "outputs": []
    },
    "deploy": {
      "interactive": true,
      "cache": false,
      "persistent": true,
      "outputs": []
    }
  }
}
